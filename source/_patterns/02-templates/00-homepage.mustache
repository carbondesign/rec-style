<div class="page" id="page">
	{{> applications-header }}
	<div role="main">
		{{# emergency }}
			{{> components-alert }}
		{{/ emergency }}
		{{# hero }}
			{{> components-block-hero }}
		{{/ hero}}

		<div class="g g-3up">
			{{# touts}}
				<div class="gi">
					{{> components-inset-block }}
				</div>
			{{/ touts}}
		</div><!--end 3up-->

		<hr />

		<div class="l-two-col">
			<div class="l-main">
				<section class="section latest-posts">
					<h2 class="section-title">Latest Posts</h2>
					<ul class="post-list">
						{{# latest-posts }}
							<li>{{> components-media-block }}</li>
						{{/ latest-posts }}
					</ul>
					<a href="#" class="text-btn">View more posts</a>
				</section>
			</div><!--end .l-main-->

			<div class="l-sidebar">
				{{> applications-recent-tweets }}
			</div><!--end .l-sidebar-->
		</div><!--end .l-two-col-->
	</div><!--End role=main-->
	{{> applications-footer }}
</div>
